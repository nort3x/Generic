<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>


<StackPane fx:id="mainPane" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginSignupController">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="540.0" prefWidth="588.0" spacing="60.0">
         <children>
            <ImageView fx:id="img" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <HBox alignment="CENTER" VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="fields" alignment="TOP_CENTER" spacing="20.0">
                     <children>
                        <TextField fx:id="id" promptText="ID ..." />
                        <TextField fx:id="password" promptText="Password ..." />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="ActionButton" mnemonicParsing="false" text="Action" />
            <Button fx:id="switcher" mnemonicParsing="false" text="Dont have Account?" />
         </children>
         <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
